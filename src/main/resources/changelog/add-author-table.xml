<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <changeSet id="1" author="Anastasia">
        <createTable tableName="author" remarks="Author table">
            <column name="id" type="bigserial" autoIncrement="true" remarks="ID автоинкремент">
                <constraints primaryKey="true"/>
            </column>
            <column name="first_name" type="text" remarks="Имя автора">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="text" remarks="Фамилия автора">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="2" author="Anastasia">
        <addUniqueConstraint tableName="author" columnNames="first_name, last_name"
                             constraintName="uq_author_first_name_last_name"/>
    </changeSet>

</databaseChangeLog>